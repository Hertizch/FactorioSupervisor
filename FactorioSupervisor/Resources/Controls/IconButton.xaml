<Button x:Name="IconButtonControl" x:Class="FactorioSupervisor.Resources.Controls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="35" d:DesignWidth="35">
    <Viewbox Width="18" Height="18">
        <Canvas Width="24" Height="24">
            <Path Data="{Binding ElementName=IconButtonControl, Path=Icon}" Fill="{Binding ElementName=IconButtonControl, Path=Foreground}" />
        </Canvas>
    </Viewbox>
</Button>
